<UserControl
    x:Class="KeeZ.Avalonia.Core.Pages.Passwords"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:KeeZ.Avalonia.Core.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:KeeZ.Avalonia.Core.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="viewModels:PasswordsViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <viewModels:PasswordsViewModel />
    </Design.DataContext>
    <SplitView
        DisplayMode="Inline"
        IsPaneOpen="True"
        OpenPaneLength="300"
        PanePlacement="Left">
        <SplitView.Pane>
            <StackPanel>
                <Border IsVisible="True" Theme="{DynamicResource CardBorder}">
                    <Panel>
                        <TextBlock
                            IsVisible="{Binding SelectedColor, Converter={x:Static ObjectConverters.IsNull}}"
                            Text="Click on Color to Check Details"
                            TextWrapping="Wrap" />
                        <controls:ColorDetailControl
                            Background="{Binding SelectedColor.Brush}"
                            ColorResourceKey="{Binding SelectedColor.ColorResourceKey}"
                            IsVisible="{Binding SelectedColor, Converter={x:Static ObjectConverters.IsNotNull}}"
                            ResourceKey="{Binding SelectedColor.ResourceKey}"
                            ResourceName="{Binding SelectedColor.ColorDisplayName}" />
                    </Panel>
                </Border>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <ScrollViewer>
                <StackPanel Margin="8,0">
                    <TextBlock
                        Classes="H3"
                        Text="Basic Colors"
                        Theme="{DynamicResource TitleTextBlock}" />
                </StackPanel>
            </ScrollViewer>
        </SplitView.Content>
    </SplitView>
</UserControl>
