<UserControl
    x:Class="KeeZ.Avalonia.Core.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:KeeZ.Avalonia.Core.Pages"
    xmlns:views="clr-namespace:KeeZ.Avalonia.Core.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="views:MainViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ControlTheme x:Key="CategoryTabItem" TargetType="TabItem">
            <Setter Property="IsEnabled" Value="False" />
            <Setter Property="Template">
                <ControlTemplate TargetType="TabItem">
                    <TextBlock
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="4"
                        Text="{TemplateBinding Header}" />
                </ControlTemplate>
            </Setter>
            <Style Selector="^:disabled /template/ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource SemiColorText1}" />
            </Style>
        </ControlTheme>
    </UserControl.Resources>
    <Grid RowDefinitions="Auto, *">
        <Border
            Grid.Row="0"
            IsVisible="False"
            Margin="8"
            Padding="12,4"
            Theme="{DynamicResource CardBorder}">
            <Panel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button
                        Theme="{DynamicResource IconBorderlessButton}"
                        Command="{Binding OpenUrlCommand}"
                        CommandParameter="{Binding DocumentationUrl}"
                        Content="{StaticResource SemiIconGlobe}" />

                    <Button
                        Theme="{DynamicResource IconBorderlessButton}"
                        Command="{Binding OpenUrlCommand}"
                        CommandParameter="{Binding RepoUrl}"
                        Content="{StaticResource SemiIconGithubLogo}" />

                    <ToggleSwitch
                        Theme="{DynamicResource IconBorderlessToggleSwitch}"
                        Command="{Binding ToggleThemeCommand}"
                        OnContent="{StaticResource SemiIconMoon}"
                        OffContent="{StaticResource SemiIconSun}" />

                    <Button
                        Theme="{DynamicResource IconBorderlessButton}"
                        Content="{StaticResource SemiIconMenu}">
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom" ItemsSource="{Binding MenuItems}" />
                        </Button.Flyout>
                        <Button.Styles>
                            <Style Selector="MenuItem" x:DataType="views:MenuItemViewModel">
                                <Setter Property="Header" Value="{Binding Header}" />
                                <Setter Property="ItemsSource" Value="{Binding Items}" />
                                <Setter Property="Command" Value="{Binding Command}" />
                                <Setter Property="CommandParameter" Value="{Binding CommandParameter}" />
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </Panel>
        </Border>
        <TabControl
            Name="tab"
            Grid.Row="1"
            Margin="8"
            Padding="20,0,0,0"
            TabStripPlacement="Left"

            Theme="{DynamicResource ScrollLineTabControl}">
            <TabControl.Styles>
                <Style Selector=".Dismiss /template/ ScrollViewer#PART_ScrollViewer">
                    <Setter Property="IsVisible" Value="False" />
                </Style>
            </TabControl.Styles>
            <TabControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </TabControl.ItemsPanel>
            <TabItem Header="All Entities">
                <pages:PaletteDemo />
            </TabItem>
            <TabItem Header="2FA Codes">
                <pages:PaletteDemo />
            </TabItem>
            <TabItem
                Theme="{DynamicResource CategoryTabItem}"
                Header="Tags" />
            <TabItem Header="Palette">
                <pages:PaletteDemo />
            </TabItem>
            <TabItem
                Theme="{DynamicResource CategoryTabItem}"
                Header="Groups" />
            <TabItem Header="Recycle Bin">
                <pages:PaletteDemo />
            </TabItem>
            <TabItem
                Theme="{DynamicResource CategoryTabItem}"
                Header="Audit" />
            <TabItem Header="Duplicated">
                <pages:PaletteDemo />
            </TabItem>
            <TabItem Header="Weak/Entropy">
                <pages:PaletteDemo />
            </TabItem>
            <TabItem Header="All Issues">
                <pages:PaletteDemo />
            </TabItem>
            
        </TabControl>
    </Grid>
</UserControl>