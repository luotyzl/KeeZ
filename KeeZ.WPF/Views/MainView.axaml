<UserControl
    x:Class="KeeZ.WPF.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:KeeZ.WPF.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="views:MainViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ControlTheme x:Key="CategoryTabItem" TargetType="TabItem">
            <Setter Property="IsEnabled" Value="False" />
            <Setter Property="Template">
                <ControlTemplate TargetType="TabItem">
                    <TextBlock
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="4"
                        Text="{TemplateBinding Header}" />
                </ControlTemplate>
            </Setter>
            <Style Selector="^:disabled /template/ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource SemiColorText1}" />
            </Style>
        </ControlTheme>
    </UserControl.Resources>
    <Grid ColumnDefinitions="250, 1, 250, 1, *">
        
        <!-- Left Column: Navigation Menu -->
        <Border Grid.Column="0" Background="{DynamicResource SemiColorFill1}" Padding="8">
            <StackPanel>
                <!-- Group 1: Quick View -->
                <TextBlock Text="Quick View" FontSize="12" Margin="0,4,0,8" Foreground="{DynamicResource SemiColorText3}"/>
                <Button Content="  All Entities" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
                <Button Content="  2FA Codes" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
                <Button Content="  Attachments" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
                
                <Separator Margin="0,16,0,8"/>
                
                <!-- Group 2: Tags -->
                <TextBlock Text="Tags" FontSize="12" Margin="0,4,0,8" Foreground="{DynamicResource SemiColorText3}"/>
                
                <Separator Margin="0,16,0,8"/>
                
                <!-- Group 3: Groups -->
                <TextBlock Text="Groups" FontSize="12" Margin="0,4,0,8" Foreground="{DynamicResource SemiColorText3}"/>
                <Button Content="  Recycle Bin" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
                
                <Separator Margin="0,16,0,8"/>
                
                <!-- Group 4: Audit -->
                <TextBlock Text="Audit" FontSize="12" Margin="0,4,0,8" Foreground="{DynamicResource SemiColorText3}"/>
                <Button Content="  Duplicated" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
                <Button Content="  Weak/Entropy" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
                <Button Content="  All Issues" HorizontalAlignment="Stretch" Margin="0,2" Padding="12,8" FontSize="14"/>
            </StackPanel>
        </Border>
        
        <!-- Border between left and center -->
        <Border Grid.Column="1" Background="{DynamicResource SemiColorBorder}" />
        
        <!-- Center Column: Dynamic Entities List -->
        <Border Grid.Column="2" Background="{DynamicResource SemiColorFill2}" Padding="8">
            <TextBlock Text="Entities List" VerticalAlignment="Top"/>
        </Border>
        
        <!-- Border between center and right -->
        <Border Grid.Column="3" Background="{DynamicResource SemiColorBorder}" />
        
        <!-- Right Column: Entity Details -->
        <Border Grid.Column="4" Background="{DynamicResource SemiColorFill1}" Padding="8">
            <TextBlock Text="Entity Details" VerticalAlignment="Top"/>
        </Border>
        
    </Grid>
</UserControl>